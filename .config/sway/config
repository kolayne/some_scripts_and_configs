## =====================
## Globals
## =====================

# Mod1 = Alt. Mod4 = Super.
set $mod Mod4

font pango:FuraCode Nerd Font 11


## =====================
## Global state
## =====================

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
output eDP-1 bg /home/nikolai/Pictures/aurora/Les_-_noch.png fit
# Example configuration:
#    output HDMI-A-1 resolution 1920x1080 position 1920x0
#
# To detect outputs, run `swaymsg -t get_outputs`

# Status bar (`man 5 sway-bar`)
bar {
	position top

	status_command while date +'%Y-%m-%d %X'; do sleep 1; done

	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}

# TODO: screen dimming, screen locking


## =====================
## Input configuration
## =====================

input type:touchpad {
	dwt disabled
	tap enabled
	drag_lock disabled
	natural_scroll enabled
	middle_emulation enabled
}

input type:keyboard {
	xkb_layout "us,ru"
	xkb_options "grp:win_space_toggle"
}

floating_modifier $mod

# Allow focus stealing by visible windows
focus_on_window_activation smart
# TODO: focus_wrapping?

# TODO: Gestures


## =====================
## Window manager control
## =====================

tiling_drag enable

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit. The audio file is from `linux-a11y-sound-theme`
bindsym $mod+Shift+e exec swaynag -t warning -m 'How would you like to exit?' -B 'Reboot' 'paplay /usr/share/sounds/linux-a11y/stereo/system-shutdown.oga ; sway exit ; reboot' -B 'Shutdown' 'paplay /usr/share/sounds/linux-a11y/stereo/system-shutdown.oga ; sway exit ; shutdown now' -B 'Exit sway' 'sway exit'
# Hibernate
bindsym $mod+Shift+h exec swaynag -t warning -m 'Hibernate?' -B 'Yes' 'systemctl hibernate'


## =====================
## Workspaces
## =====================

bindsym $mod+Tab workspace back_and_forth

set $ws1 "1:Main"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9:Messengers"
set $ws10 "10:Background"

# Basic assignments
workspace $ws1 output primary
workspace $ws9 output eDP-1
# Assignments used for demonstrations
# 4 - slides control, 5 - terminal control
# 6 - slides demo, 7 - terminal demo, 8 - obs preview
#workspace $ws4 output eDP-1
#workspace $ws5 output eDP-1
#workspace $ws6 output HDMI-1-0?
#workspace $ws7 output HDMI-1-0?
#workspace $ws8 output HDMI-1-0?

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Make the currently focused window to the scratchpad
bindsym $mod+Shift+minus move to scratchpad
# Show/hide a scratchpad window (cycles through them)
bindsym $mod+minus scratchpad show


## =====================
## Window/container control
## =====================

# Resize window
mode "resize" {
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# Exit mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Kill focused container
bindsym Mod1+F4 kill

# TODO: which launchers should I use?
# start dmenu (program launcher)
bindsym Mod1+F2 exec --no-startup-id dmenu_run
# .desktop file launcher
bindsym $mod+d exec wmenu-run

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused container
bindsym $mod+Shift+left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split in horizontal orientation
bindsym $mod+h split h
# Split in vertical orientation
bindsym $mod+v split v

# Fullscreen mode of the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+b floating toggle

# Change focus between tiling / floating windows
bindsym $mod+b focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
bindsym $mod+Shift+a focus child


## =====================
## Window rules
## =====================

for_window [title="Task Manager - (Brave|Google Chrome|Chromium|Yandex Browser)"] floating enable
for_window [class="gnome-calculator"] floating enable
for_window [class="gnome-system-monitor"] floating enable
for_window [class="zoom"] floating enable
for_window [app_id="foot"] floating enable
# Thunderbird reminders: sticky and no focus stealing
for_window [title="\d+ Reminders?"] sticky enable
no_focus [title="\d+ Reminders?"]


## =====================
## State control keybindings
## =====================

# Increase/decrease brightness
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10

# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Play/pause media key
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause

#bindsym $mod+m exec --no-startup-id birdtray --toggle-db


## =====================
## App launch keybindings
## =====================

# Start a terminal
bindsym $mod+Return exec terminator
bindsym $mod+Shift+Return exec foot

# Open browser
bindsym $mod+g exec chromium --new-window

# Screenshot hotkeys
bindsym Ctrl+Print exec --no-startup-id flameshot screen --clipboard
bindsym Print exec --no-startup-id flameshot gui

# Lock screen hotkey
bindsym $mod+l exec --no-startup-id loginctl lock-session


## =====================
## Autostart
## =====================

# Switch to the first workspace with the appropriate name
exec --no-startup-id i3-msg workspace $ws1

# Startup sound - audio file is from `linux-a11y-sound-theme`
exec --no-startup-id paplay /usr/share/sounds/linux-a11y/stereo/system-ready.oga

# TODO: switch the clipboard manager?
exec --no-startup-id pdeath_hup clipster --daemon
# TODO: find an alternative to redshift-gtk
# TODO: switch the battery icon app?
exec --no-startup-id cbatticon -l 15
# Icons in sway tabs
exec --no-startup-id swaycons
# Rimokon - remote control of this device via Telegram
exec --no-startup-id pdeath_hup Docs/Rimokon/{venv/bin/python,rimokon_main.py}

#exec --no-startup-id birdtray
exec --no-startup-id thunderbird
exec telegram-desktop


include /etc/sway/config.d/*
